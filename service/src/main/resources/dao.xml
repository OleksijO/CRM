<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">
    <!-- datasource from xml & properties
    <import resource="classpath*:datasource.xml"/>
    -->

       <import resource="classpath*:aspects.xml"/>

    <context:annotation-config/>
    <context:component-scan
            base-package="com.becomejavasenior.jdbc.impl"/>

    <jee:jndi-lookup id="dataSource"
                     jndi-name="java:comp/env/jdbc/postgres"/>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <!--
    <bean id="companyDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.CompanyDaoJdbcTemplateImpl"
          autowire="default"/>
    -->

    <bean id="companyDao" class="com.becomejavasenior.jdbc.impl.CompanyDAOImpl"
          autowire="default"/>

    <bean id="contactDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.ContactDaoJdbcTemplateImpl">
        <constructor-arg ref="tagDao"/>
    </bean>

    <bean id="dealDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.DealDaoJdbcTemplateImpl"
          autowire="default"/>

    <bean id="tagDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.TagDaoJdbcTemplateImpl"
          autowire="default"/>

    <bean id="reportDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.ReportDaoJdbcDaoTemplateImpl"
        p:dataSource-ref="dataSource"/>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>


</beans>



