    <import resource="classpath*:aspects.xml"/>

    <context:annotation-config/>
    <context:component-scan
            base-package="com.becomejavasenior.jdbc.impl"/>


    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="companyDao"
          class="com.becomejavasenior.jdbc.implJdbcTemplate.CompanyDaoJdbcTemplateImpl"
          autowire="byType"/>

    <bean id="contactDao"
          class="com.becomejavasenior.jdbc.implJdbcTemplate.ContactDaoJdbcTemplateImpl">
        <constructor-arg ref="tagDao"/>
    </bean>

    <bean id="dealDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.DealDaoJdbcTemplateImpl"
          autowire="default"/>

    <bean id="tagDao" class="com.becomejavasenior.jdbc.implJdbcTemplate.TagDaoJdbcTemplateImpl"
          autowire="default"/>


</beans>



