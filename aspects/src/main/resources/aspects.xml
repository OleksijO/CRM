<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <aop:aspectj-autoproxy/>
    <bean id="aop-dao-success" class="com.becomejavasenior.aspects.dao.SuccessfullLog">
        <property name="path" value="d:/logs/dao_success.log"/>
    </bean>
    <bean id="aop-dao-throwed" class="com.becomejavasenior.aspects.dao.ThrowedLog">
        <property name="path" value="d:/logs/dao_error.log"/>
    </bean>


</beans>



